{% extends 'base.html.twig' %}

{% block title %}Sign-in{% endblock %}

{% block stylesheets %}
    {{ parent() }} {# Mant√©m o CSS global #}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block main %}
    <main class="login-container">
        <section class="login-container_img">
        </section>
        <section class="login-container_form">
           <form method="post" action="">
                <header class="form-login_header">
                    <h1>Sign-in</h1>
                </header>
                {% if error %}
                    <div class="alert alert-danger">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                {# {% if error %}
                    <div class="alert-danger">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        {{ error.message }}
                    </div>
                {% endif %} #}
                <div class="form-login_body">
                    <div>
                        <input class="form-control" type="email" name="_username" id="_username" placeholder="Email" value="{{ last_username }}">
                    </div>
                    <div>
                        <input class="form-control" type="password" name="_password" id="password" placeholder="Password">
                    </div>
                    <div>
                        <input class="btn" type="submit" value="Sign-in">
                    </div>
                </div>
                <footer class="form-login_footer">
                    <p class="form-link">Don't have an account? <a href="/register">Sign-up</a></p>
                </footer>
           </form>
        </section>
    </main>
{% endblock %}
