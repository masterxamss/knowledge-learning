{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block main %}
    <main>
        <section class="container-img">
            {#<img src={{ asset('images/register_1.png') }}></img>#}
        </section>
        
        <section class="container-form">
            <div class="container-form_title">
                <h1>Inscrivez-vous et commencez Ã  apprendre</h1>
            </div>
            {{ form_start(form) }}
                <div>
                    {{ form_widget(form.first_name) }}
                    {{ form_errors(form.first_name) }}
                </div>
                <div>
                    {{ form_widget(form.last_name) }}
                    {{ form_errors(form.last_name) }}
                </div>
                <div>
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
                <div>
                    {{ form_widget(form.password) }}
                    {{ form_errors(form.password) }}
                </div>
                <div>
                    {{ form_widget(form.confirmPassword) }}
                    {{ form_errors(form.confirmPassword) }}
                </div>
                <div>
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
            <div>
                <p>Vous avez deja un compte ? <a href="#">Connectez-vous</a></p>
            </div>
        </section>
    </main>
{% endblock %}
