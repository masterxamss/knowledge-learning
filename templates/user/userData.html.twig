{{ form_start(form, {
    attr: {
      class: 'form-user',
      method: 'POST',
      enctype: 'multipart/form-data',
      action: path('app_user_data', {id: app.user.id}),
      'data-turbo': 'false',
    },
  })
}}
  <div>
    {{ include('partials/flash_messages.html.twig') }}
  </div>
  <section class="user-container">

    <header class="user-container__title">
      <div>
        <h2>Informations personnelles</h2>
      </div>
      <div> 
        <h2>Address</h2>
      </div>
    </header>

    <section class="user-container__infos">
      <div class="basic-data">
        {# FIRST NAME && LAST NAME #}
        <div class="basic-data__name">
          <div>
            <div>
              {{ form_widget(form.first_name, {
                attr: {
                  class: form.first_name.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control',
                }})
              }}
              {% if form.first_name.vars.errors|length > 0 %}
                <ul class="form-error">
                  {% for error in form.first_name.vars.errors %}
                    <li><i class="fa-solid fa-circle-exclamation"></i>{{ error.message }}</li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
            <div>
              {{ form_widget(form.last_name, {
                attr: {
                  class: form.last_name.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control',
                }})
